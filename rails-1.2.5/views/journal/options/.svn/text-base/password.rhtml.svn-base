<%=error_messages_for 'user'%>
<%=start_form_tag%>
<%unless session[:sc]%>
<p>
<label for="old_password">Old password:</label><%=password_field_tag 'old_password'%>
</p>
<%end%>
<p>
<label for="new_password">New password:</label><%=password_field_tag 'new_password'%>
</p>
<p>
<label for="new_password_confirmation">New password confirmation:</label><%=password_field_tag 'new_password_confirmation'%>
</p>
<%=submit_tag 'Change password'%>

<%=end_form_tag%>
