<div class="tag-cloud">
<h3><%if defined?(title) && !title.nil?%>
      <%=title%>
    <%else%>
       Tags
    <%end%>
</h3>
<% tag_cloud(tag_cloud, %w(cloud1 cloud2 cloud3 cloud4 cloud5 cloud6 cloud7 cloud8 cloud9)) do |tag, cloud_class| %>
  <%= link_to(h("#{tag}"),{:action => 'search', :tagged => tag}, { :rel => 'tag', :class => cloud_class } ) -%>
<% end %>
</div>
